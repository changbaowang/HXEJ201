<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.hxgroup.www.hhu.ui.feature.GpsSetActivity">

    <RelativeLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/color_titlebar_bg">

        <ImageView
            android:id="@+id/feature_gpsset_backiv"
            android:layout_width="@dimen/titlebar_height"
            android:layout_height="@dimen/titlebar_height"
            android:background="@drawable/btn_back_bg_selector"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/WIFIset"
            android:textColor="@color/color_white"
            android:textSize="@dimen/titlebar_text_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/action_bar"
        android:layout_marginTop="15dp"
        android:background="@color/color_split_line" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/feature_item_horizontal_space"
        android:paddingRight="@dimen/feature_item_horizontal_space"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/kLongitude"
                android:textColor="@color/color_item_title"
                android:textSize="@dimen/item_title_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/gpsset_item_local_gps_cb"
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:background="@drawable/checkbox_bg_selector"
                android:button="@null" />
        </LinearLayout>

        <cn.hxgroup.www.hhu.ui.component.ClearEditText
            android:id="@+id/gpsset_item_local_gps_et"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:enabled="false"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="@dimen/item_content_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_split_line" />

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/feature_item_horizontal_space"
        android:paddingRight="@dimen/feature_item_horizontal_space"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/kLatitude"
                android:textColor="@color/color_item_title"
                android:textSize="@dimen/item_title_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <CheckBox
                android:id="@+id/gpsset_item_local_gps_cb2"
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:background="@drawable/checkbox_bg_selector"
                android:button="@null" />
        </LinearLayout>

        <cn.hxgroup.www.hhu.ui.component.ClearEditText
            android:id="@+id/gpsset_item_local_gps_et2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:enabled="false"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="@dimen/item_content_text_size" />
    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/gps_set_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置gps" />
</LinearLayout>
